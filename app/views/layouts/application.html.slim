doctype html
html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    title Seminar RoR
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag "https://www.gstatic.com/charts/loader.js"
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    /! Latest compiled and minified CSS
    link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" /
    /! jQuery library
    script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"
    /! Latest compiled JavaScript
    script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
    link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" /
    meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" /
  body
    = render "shared/notice"
    .stage
      = render partial: "layouts/header"
      .main
        = yield
      = render partial: "layouts/footer"
    .stage-sidebar
      = render partial: "layouts/sidebar"

    javascript:
      $("#toggle-menu").click(function(e){
        stage = $(".stage");
        sidebar = $(".stage-sidebar");
        if(stage.hasClass("open")) {
          $("body").css("overflow-y", "scroll");
          stage.removeClass("open");
          sidebar.removeClass("sidebar-open");
        } else {
          $("body").css("overflow-y", "scroll");
          stage.addClass("open");
          sidebar.addClass("sidebar-open");
          sidebar.css("height", $(window).outerHeight());
        }
      });

      $("#shorten-submit").click(function(e){
        if(!$("#shorten-link").val()) {
          e.preventDefault();
        } else {
          r = document.getElementsByClassName('short-link-result')[0];
          r.innerHTML = '';
          r.classList.add('loading');
        }
      });
